<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.safiraak.validin">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Validin">
        <activity
            android:name=".presentation.view.SettingActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.CameraxActivity"
            android:exported="true"
            android:label="CameraxActivity"
            android:theme="@style/Theme.Validin.NoActionBar"/>
        <activity
            android:name=".presentation.view.AccountActivity"
            android:exported="true"
            android:label="AccountActivity"
            android:theme="@style/Theme.Validin.NoActionBar"/>
        <activity
            android:name=".presentation.view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.MainActivity"
            android:exported="true"
            android:label="MainActivity"
            android:theme="@style/Theme.Validin.NoActionBar"/>
        <activity
            android:name=".presentation.view.VerificationActivity1"
            android:exported="false"
            android:label="VerificationActivity1"
            android:theme="@style/Theme.Validin.NoActionBar"/>
        <activity
            android:name=".presentation.view.VerificationActivity2"
            android:exported="false"
            android:label="VerificationActivity2"
            android:theme="@style/Theme.Validin.NoActionBar"/>
    </application>

</manifest>